.page-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-self: center;
  height: 100vh;
}

.title-box {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 2%;
  padding-bottom: 1%;
  font-weight: 700;
  border-bottom: 1rpx solid #E3E3E3;
  margin-bottom: 1%;
}

.top,
.dark,
.light {
  font-size: 70%;
  line-height: 280%;
  text-align: center;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.dark {
  background-color: #E3E3E3;
}

.light {
  background-color: #F1F1F1;
}

.top {
  color: #fff;
  background-color: #01A9F4;
}
