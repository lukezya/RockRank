.page-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100vh;
  background-color: #F6F6F4;
}

.nav-bar-title {
  color: #000;
  font-family: Inter;
  font-size: 40rpx;
  font-style: normal;
  font-weight: 700;
}

.nav-bar-left {
  display: flex;
  flex-direction: row;
}

.nav-bar-home {
  margin-left: 40rpx;
}

.sessions-container {
  overflow-y: auto;
}

.group-row {
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #F3F3F3;
  min-height: 120rpx;
  padding: 4% 5%;
  background-color: #FFF;
}

.group-row:first-child {
  border-top: 1rpx solid #F3F3F3;
}

.category-rounds {
  display: flex;
  flex-direction: column;
  align-self: flex-start;
  flex: 0.5;
}

.category-round {
  display: flex;
  flex-direction: column;
  flex: 0.7;
  margin-bottom: 2.5%;
}

.category-text {
  font-family: Inter;
  font-size: 26rpx;
  font-style: normal;
  font-weight: 700;
  line-height: normal;
}

.round-text {
  color: #666;
  font-family: Inter;
  font-size: 22rpx;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
}

.discipline-section {
  flex: 0.4;
  text-align: end;
  align-self: center;
}

.status-section {
  display: flex;
  flex-direction: column;
  flex: 0.2;
  text-align: end;
}

.open-text {
  color: #35DB31;
  font-family: Inter;
  font-size: 22rpx;
  font-style: italic;
  font-weight: 500;
  line-height: normal;
}

.completed-text {
  color: #148BE1;
  font-family: Inter;
  font-size: 22rpx;
  font-style: normal;
  font-weight: 500;
  line-height: normal;
}

.discipline-text {
  color: #666;
  text-align: center;
  font-family: Inter;
  font-size: 26rpx;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
}

.swipe-complete {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 100%;
  background-color: #148BE1;
  color: #FFF;
}

.float-button {
  width: 94rpx;
  height: 94rpx;
  background-color: #FFF;
  border-radius: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 5vw;
  bottom: 3vh;
  filter: drop-shadow(0rpx 6rpx 12rpx rgba(0, 0, 0, 0.25));
}
